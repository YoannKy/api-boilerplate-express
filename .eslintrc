{
  "extends": "eslint:recommended",
  "plugins": ["angular"],
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "angular": true,
    "module": true,
    "inject": true,
    "$": true,
    "jQuery": true,
    "require": true
  },
  "rules": {
    "no-useless-escape": 0,
    "angular/timeout-service": 0,
    "semi": [2, "always"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-mixed-spaces-and-tabs": [2],
    "curly": [2, "all"],
    "brace-style": [2, "1tbs", { "allowSingleLine": false }]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
